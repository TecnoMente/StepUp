# Anthropic Claude API Key
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM Provider (anthropic, openai, or azure_openai)
LLM_PROVIDER=anthropic

# Optional: OpenAI API Key (for fallback)
# OPENAI_API_KEY=sk-your-openai-key-here

# Database
# Local development (PostgreSQL via Docker):
DATABASE_URL=postgresql://stepup:stepup_dev_password@localhost:5432/stepup_dev
# Production (PostgreSQL - Neon example):
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-random-secret-here

# Optional: Cron job secret for cleanup endpoint (generate with: openssl rand -base64 32)
# Only needed if you want to protect the cleanup endpoint
CRON_SECRET=your-cron-secret-here

# NextAuth.js
# Secret for NextAuth.js (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here
# Local development:
NEXTAUTH_URL=http://localhost:3000
# Production (update with your Vercel URL):
# NEXTAUTH_URL=https://your-app.vercel.app

# Google OAuth (optional - for "Sign in with Google")
# Get credentials from: https://console.cloud.google.com/
# See AUTHENTICATION_SETUP.md for detailed setup instructions
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Enable Google OAuth button in UI (set to true to show the button)
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED=false

# Email Allowlist (comma-separated list of allowed emails)
# REQUIRED: You must add at least one email to grant access
# If empty, NO ONE can access the application (secure by default)
# Example: user1@example.com,user2@example.com,admin@company.com
ALLOWED_EMAILS=test@test.com
